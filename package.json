{
  "name": "riffblock-staking-contract",
  "version": "1.0.0",
  "description": "Smart contracts for RIFFblock staking on Polygon",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test-setup": "hardhat run scripts/test-setup.ts",
    "test-setup:amoy": "hardhat run scripts/test-setup.ts --network amoy",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:amoy": "hardhat run scripts/deploy.ts --network amoy",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "verify:amoy": "hardhat run scripts/verify.ts --network amoy",
    "verify:polygon": "hardhat verify --network polygon"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.3.0",
    "hardhat": "^2.22.5"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4"
  }
}
